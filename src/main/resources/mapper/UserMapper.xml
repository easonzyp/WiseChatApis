<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wiseapis.chat.dao.UserDao">

    <insert id="createUser">
        INSERT INTO user (nickname, userName, password)
        VALUES (#{nickname}, #{userName}, #{password})
    </insert>

    <update id="saveToken">
        UPDATE user
        SET userToken = #{userToken}
        WHERE id = #{id}
    </update>

    <select id="login" resultType="com.wiseapis.chat.bean.UserBean">
        SELECT *
        FROM user
        WHERE userName = #{userName} AND password = #{password}
    </select>

    <select id="getUserByName" resultType="com.wiseapis.chat.bean.UserBean">
        SELECT *
        FROM user
        WHERE userName = #{userName}
    </select>

    <select id="getUserById" resultType="com.wiseapis.chat.bean.UserBean">
        SELECT *
        FROM user
        WHERE id = #{id}
    </select>

    <select id="getUserList" resultType="com.wiseapis.chat.bean.UserBean">
        SELECT *
        FROM user
    </select>
</mapper>